<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:cardCornerRadius="10sp">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/shape_card">
               <ImageView
                   android:id="@+id/img1"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintRight_toLeftOf="@+id/tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_search_24"
                   android:layout_gravity="center"/>
               <TextView
                   android:id="@+id/tv"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toRightOf="@+id/img1"
                   app:layout_constraintRight_toLeftOf="@+id/img2"
                   android:layout_width="200dp"
                   android:text="Search for apps and games"
                   android:layout_height="wrap_content"
                   android:ellipsize="end"
                   android:layout_gravity="center"/>
               <ImageView
                   android:id="@+id/img2"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toRightOf="@+id/tv"
                   app:layout_constraintRight_toLeftOf="@+id/img3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_mic_none_24"
                   android:layout_gravity="center"/>
               <ImageView
                   android:id="@+id/img3"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/img2"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_account_circle_24"
                   android:layout_gravity="center"/>


           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv1"
                android:textColor="#009506"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For you"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv2"/>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:background="#009506"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv1"
                app:layout_constraintRight_toRightOf="@id/tv1"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top charts"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv1"
                app:layout_constraintRight_toLeftOf="@id/tv3"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv2"
                app:layout_constraintRight_toLeftOf="@id/tv4"/>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv3"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9C9C"/>
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_prog"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        app:layout_constraintBottom_toTopOf="@+id/l2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
<LinearLayout
    android:id="@+id/l2"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9C9C"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv0"
            android:src="@drawable/games"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toLeftOf="@+id/img01"/>
        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img0"
            app:layout_constraintLeft_toLeftOf="@id/img0"
            app:layout_constraintRight_toRightOf="@id/img0"/>
        <ImageView
            android:id="@+id/img01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/apps"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv01"
            app:layout_constraintRight_toLeftOf="@+id/img02"
            app:layout_constraintLeft_toRightOf="@id/img0"/>
        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps"
            android:textColor="#009506"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img01"
            app:layout_constraintLeft_toLeftOf="@id/img01"
            app:layout_constraintRight_toRightOf="@id/img01"/>
        <ImageView
            android:id="@+id/img02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/movies"
            app:layout_constraintBottom_toTopOf="@id/tv02"
            app:layout_constraintRight_toLeftOf="@+id/img03"
            app:layout_constraintLeft_toRightOf="@id/img01"/>
        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img02"
            app:layout_constraintLeft_toLeftOf="@id/img02"
            app:layout_constraintRight_toRightOf="@id/img02" />
        <ImageView
            android:id="@+id/img03"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/books"
            app:layout_constraintBottom_toTopOf="@id/tv03"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img02"/>
        <TextView
            android:id="@+id/tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Books"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img03"
            app:layout_constraintLeft_toLeftOf="@id/img03"
            app:layout_constraintRight_toRightOf="@id/img03"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>